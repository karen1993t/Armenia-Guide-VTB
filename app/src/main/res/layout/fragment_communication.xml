<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_user_communication"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="15.5dp"
        android:fontFamily="@font/gotham_pro"
        android:lineHeight="24dp"
        android:lineSpacingExtra="5sp"
        android:text="@string/text_title_communication"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/btn_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_close"
        tools:targetApi="p" />

    <ProgressBar
        android:id="@+id/progress_biometry"
        style="@style/CustomProgressBar"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:max="100"
        android:progress="80"
        android:secondaryProgress="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_user_communication" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/ic_btn_close_grey"
        android:clickable="true"
        android:contentDescription="@string/description_btn_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/text_communication_info"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="18sp"
        android:lineSpacingExtra="4sp"
        android:text="@string/text_communication_info"
        android:textColor="@color/gray"
        android:textFontWeight="400"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_biometry"
        tools:ignore="TextContrastCheck"
        tools:targetApi="p" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_obtaining_the_statement"
        style="@style/box_drop_down_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="14.5dp"
        android:hint="@string/hint_text_obtaining_the_statement"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/gray"
        app:boxStrokeErrorColor="@color/design_default_color_error"
        app:endIconDrawable="@drawable/ic_next_gray"
        app:endIconMode="custom"
        app:errorTextColor="@color/design_default_color_error"
        app:hintTextColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_communication_info">

        <AutoCompleteTextView
            android:id="@+id/edit_obtaining_the_statement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_vertical"
            android:inputType="none"
            android:lineSpacingExtra="4sp"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:ignore="LabelFor,TextContrastCheck"
            tools:targetApi="p" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_communication_with_the_bank"
        style="@style/box_drop_down_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="14.5dp"
        android:hint="@string/hint_text_communication_with_the_bank"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/gray"
        app:boxStrokeErrorColor="@color/design_default_color_error"
        app:endIconDrawable="@drawable/ic_next_gray"
        app:endIconMode="custom"
        app:errorTextColor="@color/design_default_color_error"
        app:hintTextColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_obtaining_the_statement">

        <AutoCompleteTextView
            android:id="@+id/edit_communication_with_the_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_vertical"
            android:inputType="none"
            android:lineSpacingExtra="4sp"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:ignore="LabelFor,TextContrastCheck"
            tools:targetApi="p" />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/checkBox_privacy_policy"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="13dp"
        android:button="@drawable/check_box_selector"
        android:drawablePadding="12dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_horizontal|center_vertical"
        android:padding="12dp"
        android:theme="@style/CustomCheckBox"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_privacy_policy"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="71dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="14.4sp"
        android:lineSpacingExtra="3sp"
        android:text="@string/text_privacy_policy"
        android:textFontWeight="400"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/checkBox_privacy_policy"
        app:layout_constraintStart_toEndOf="@id/checkBox_privacy_policy"
        app:layout_constraintTop_toTopOf="@id/checkBox_privacy_policy"
        tools:targetApi="p" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="15sp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/background_button"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical|center_horizontal"
        android:lineSpacingExtra="5sp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck"
        tools:targetApi="p" />

</androidx.constraintlayout.widget.ConstraintLayout>