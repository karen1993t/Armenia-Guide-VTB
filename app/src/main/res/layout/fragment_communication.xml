<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_btn_close_grey"
        android:clickable="true"
        android:contentDescription="@string/description_btn_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_user_communication"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/gotham_pro"
        android:lineHeight="24dp"
        android:lineSpacingExtra="5sp"
        android:text="@string/text_title_communication"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_close"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/text_communication_info"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="18sp"
        android:lineSpacingExtra="4sp"
        android:text="@string/text_communication_info"
        android:textColor="@color/gray"
        android:textFontWeight="400"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_user_communication"
        tools:ignore="TextContrastCheck"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/obtaining_the_statement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="14.4sp"
        android:lineSpacingExtra="4sp"
        android:selectAllOnFocus="true"
        android:text="@string/text_obtaining_the_statement"
        android:textColor="@color/gray"
        android:textFontWeight="400"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_communication_info"
        tools:targetApi="p" />

    <RadioGroup
        android:id="@+id/btn_radio_group_1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/obtaining_the_statement">


        <RadioButton
            android:id="@+id/btn_email"
            android:layout_width="66dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="2dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_button_red"
            android:button="@null"
            android:checked="true"
            android:elevation="5dp"
            android:gravity="center"
            android:lineHeight="17sp"
            android:lineSpacingExtra="3sp"
            android:text="@string/email"
            android:textAppearance="@style/text_appearance"
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textSize="14sp"
            tools:targetApi="p" />

        <RadioButton
            android:id="@+id/btn_email_rus"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginVertical="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/background_button_white"
            android:button="@null"
            android:elevation="5dp"
            android:gravity="center"
            android:lineHeight="17sp"
            android:lineSpacingExtra="3sp"
            android:text="@string/email_rus"
            android:textAppearance="@style/text_appearance"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/btn_male"
            tools:targetApi="p" />

    </RadioGroup>


    <TextView
        android:id="@+id/edit_communication_with_the_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4sp"
        android:selectAllOnFocus="true"
        android:text="@string/text_obtaining_the_statement"
        android:textColor="@color/gray"
        android:textFontWeight="400"
        android:lineHeight="14.4dp"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:ignore="LabelFor,TextContrastCheck"
        tools:targetApi="p"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_radio_group_1"/>


    <RadioGroup
        android:id="@+id/btn_radio_group_2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_communication_with_the_bank">


        <RadioButton
            android:id="@+id/btn_email_2"
            android:layout_width="66dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="2dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_button_red"
            android:button="@null"
            android:checked="true"
            android:elevation="5dp"
            android:gravity="center"
            android:lineHeight="17sp"
            android:lineSpacingExtra="3sp"
            android:text="@string/email"
            android:textAppearance="@style/text_appearance"
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textSize="14sp"
            tools:targetApi="p" />

        <RadioButton
            android:id="@+id/btn_email_rus_2"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginVertical="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/background_button_white"
            android:button="@null"
            android:elevation="5dp"
            android:gravity="center"
            android:lineHeight="17sp"
            android:lineSpacingExtra="3sp"
            android:text="@string/email_rus"
            android:textAppearance="@style/text_appearance"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/btn_male"
            tools:targetApi="p" />

        <RadioButton
            android:id="@+id/btn_sms"
            android:layout_width="61dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginVertical="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/background_button_white"
            android:button="@null"
            android:elevation="5dp"
            android:gravity="center"
            android:lineHeight="17sp"
            android:lineSpacingExtra="3sp"
            android:text="@string/sms"
            android:textAppearance="@style/text_appearance"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/btn_male"
            tools:targetApi="p" />

    </RadioGroup>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/background_button_gray"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical|center_horizontal"
        android:lineSpacingExtra="5sp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_marginBottom="14.95dp"
        app:layout_constraintBottom_toTopOf="@id/tab_layout_user_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck"
        tools:targetApi="p" />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_user_information"
        android:layout_width="52dp"
        android:layout_height="8dp"
        android:layout_marginTop="14.95dp"
        android:layout_marginBottom="31.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabBackground="@drawable/tab_selector_user_information"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>