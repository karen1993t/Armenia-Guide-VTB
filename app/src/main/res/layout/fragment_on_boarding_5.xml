<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.on_boarding.OnBoardingFragment5">

    <ImageView
        android:id="@+id/ic_on_boarding_fragment_2_1"
        android:layout_width="68dp"
        android:layout_height="24dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/card_vtb"
        android:src="@drawable/ic_vtb_eng_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_on_boarding_fragment_2_2"
        android:layout_width="50dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/card_vtb"
        android:src="@drawable/ic_master_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_on_boarding_fragment_5_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="77dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="30sp"
        android:lineSpacingExtra="6sp"
        android:text="@string/title_on_boarding_fragment_5_1"
        android:textColor="@color/color_red"
        android:textFontWeight="700"
        android:textSize="25sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/title_on_boarding_fragment_5_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="18sp"
        android:lineSpacingExtra="4sp"
        android:text="@string/title_on_boarding_fragment_5_2"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_on_boarding_fragment_5_1"
        tools:targetApi="p" />

    <ImageView
        android:id="@+id/ic_on_boarding_fragment_5_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="46dp"
        android:contentDescription="@string/card_vtb"
        android:src="@mipmap/ic_on_boarding_fragment_5"
        app:layout_constraintBottom_toTopOf="@id/_line_fragment_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_on_boarding_fragment_5_2" />

    <ImageView
        android:id="@+id/_line_fragment_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="31dp"
        android:layout_marginBottom="37dp"
        android:contentDescription="@string/card_vtb"
        android:src="@drawable/ic_line_on_boarding_fragment_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:contentDescription="@string/card_vtb"
        android:src="@drawable/ic_card_on_boarding_fragment_5"
        app:layout_constraintBottom_toTopOf="@id/_line_fragment_5"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>