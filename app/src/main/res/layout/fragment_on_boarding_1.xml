<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.on_boarding.OnBoardingFragment1">




    <TextView
        android:id="@+id/title_on_boarding_fragment_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/gotham_pro"
        android:lineHeight="44sp"
        android:text="@string/title_on_boarding_fragment_1"
        android:textColor="@color/color_red"
        android:textFontWeight="700"
        android:textSize="40sp"
        android:textStyle="normal"
        android:lineSpacingExtra="6sp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/ic_on_boarding_fragment_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="p" />


    <ImageView
        android:id="@+id/ic_on_boarding_fragment_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_on_boarding_fragment_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_on_boarding_fragment_1"
        android:contentDescription="@string/card_vtb" />


</androidx.constraintlayout.widget.ConstraintLayout>