<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/description_btn_close"
        android:src="@drawable/ic_btn_close_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title_sign_in_email"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="15.5dp"
        android:layout_marginTop="28.34dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="24dp"
        android:lineSpacingExtra="5sp"
        android:text="@string/text_title_sign_in_email"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_close"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/text_description_sign_in_email"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="18dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/text_description_sign_in_email"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_sign_in_email"
        tools:targetApi="p" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_input_email"
        style="@style/box_input_style_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="33.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_description_sign_in_email">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:fontFamily="@font/gotham_pro"
            android:hint="@string/text_hint_input_email_1"
            android:inputType="textEmailAddress"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_in_email"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="9.5dp"
        android:background="@drawable/background_button_red"
        android:gravity="center_vertical|center_horizontal"
        android:lineHeight="20dp"
        android:lineSpacingExtra="5sp"
        android:text="@string/text_button_sign_in_email"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_input_email"
        tools:ignore="TouchTargetSizeCheck"
        tools:targetApi="p" />

    <View
        android:id="@+id/line_gray_1"
        android:layout_width="149dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_line_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_in_email" />

    <TextView
        android:id="@+id/text_or"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="3sp"
        android:text="@string/text_or"
        android:textColor="@color/gray"
        android:textFontWeight="400"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/line_gray_1"
        app:layout_constraintEnd_toStartOf="@id/line_gray_2"
        app:layout_constraintStart_toEndOf="@id/line_gray_1"
        app:layout_constraintTop_toTopOf="@id/line_gray_1"
        tools:ignore="TextContrastCheck"
        tools:targetApi="p" />

    <View
        android:id="@+id/line_gray_2"
        android:layout_width="149dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_line_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_or"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_in_email" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_login_apple"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="31.5dp"
        android:background="@drawable/background_sign_in_all"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_or"
        tools:ignore="TouchTargetSizeCheck">

        <ImageView
            android:id="@+id/icon_apple"
            android:layout_width="18dp"
            android:layout_height="21dp"
            android:layout_marginStart="85dp"
            android:background="@drawable/ic_apple_gray"
            android:contentDescription="@string/description_icon_apple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_sign_in_apple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/text_sign_in_apple"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="13dp"

            android:gravity="center_horizontal|center_vertical"
            android:lineHeight="20dp"
            android:text="@string/text_sign_in_apple"
            android:textAppearance="@style/text_title"
            android:textFontWeight="400"
            app:layout_constraintBottom_toBottomOf="@id/icon_apple"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/icon_apple"
            app:layout_constraintTop_toTopOf="@id/icon_apple"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TextContrastCheck"
            tools:targetApi="p" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_login_facebook"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_sign_in_all"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@id/container_login_apple"
        app:layout_constraintStart_toStartOf="@id/container_login_apple"
        app:layout_constraintTop_toBottomOf="@id/container_login_apple"
        tools:ignore="TouchTargetSizeCheck">

        <ImageView
            android:id="@+id/icon_fb"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="69.5dp"
            android:background="@drawable/ic_fb_blue"
            android:contentDescription="@string/description_icon_facebook"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/text_sign_in_facebook"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="13dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/text_sign_in_facebook"
            android:textAppearance="@style/text_title"
            android:textFontWeight="400"
            app:layout_constraintBottom_toBottomOf="@id/icon_fb"

            app:layout_constraintStart_toEndOf="@id/icon_fb"
            app:layout_constraintTop_toTopOf="@id/icon_fb"
            tools:ignore="TextContrastCheck"
            tools:targetApi="p" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_sing_in_vk"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_sign_in_all"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@id/container_login_facebook"
        app:layout_constraintStart_toStartOf="@id/container_login_facebook"
        app:layout_constraintTop_toBottomOf="@id/container_login_facebook"
        tools:ignore="TouchTargetSizeCheck">

        <ImageView
            android:id="@+id/icon_vk"
            android:layout_width="20dp"
            android:layout_height="12dp"
            android:layout_marginStart="65.5dp"
            android:background="@drawable/ic_vk_blue"
            android:contentDescription="@string/description_icon_vkontakte"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/text_sign_in_vk"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/text_sign_in_vkontakte"
            android:textAppearance="@style/text_title"
            app:layout_constraintBottom_toBottomOf="@id/icon_vk"
            app:layout_constraintStart_toEndOf="@id/icon_vk"
            app:layout_constraintTop_toTopOf="@id/icon_vk"
            tools:ignore="TextContrastCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_info_sign_in_email"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="14.4dp"
        android:lineSpacingExtra="3sp"
        android:text="@string/text_info_sign_in_email"
        android:textColor="@color/gray"
        android:textFontWeight="400"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_sing_in_vk"
        tools:ignore="TextContrastCheck"
        tools:targetApi="p" />

</androidx.constraintlayout.widget.ConstraintLayout>