<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/description_btn_close"
        android:src="@drawable/ic_btn_close_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_auth_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical|center_horizontal"
        android:lineHeight="20sp"
        android:lineSpacingExtra="5sp"
        android:text="@string/text_title_auth_profile"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/btn_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_close"
        tools:targetApi="p" />

    <ImageView
        android:id="@+id/icon_logo_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:background="@drawable/ic_logo_guide"
        android:contentDescription="@string/description_icon_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_auth_login" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_login_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/background_sign_in_all"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_logo_guide"
        tools:ignore="TouchTargetSizeCheck">

        <ImageView
            android:id="@+id/icon_email"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_mail"
            android:contentDescription="@string/description_icon_google"
            app:layout_constraintBottom_toBottomOf="@id/btn_login_email"
            app:layout_constraintStart_toStartOf="@id/btn_login_email"
            app:layout_constraintTop_toTopOf="@id/btn_login_email" />

        <TextView
            android:id="@+id/text_login_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_horizontal|center_vertical"
            android:lineHeight="18sp"
            android:lineSpacingExtra="4sp"
            android:text="@string/text_login_email"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@id/icon_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_email"
            app:layout_constraintTop_toTopOf="@id/icon_email"
            tools:ignore="TextContrastCheck"
            tools:targetApi="p" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line_gray_1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/background_line_gray"
        app:layout_constraintBottom_toBottomOf="@id/text_or"
        app:layout_constraintEnd_toStartOf="@id/text_or"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_or" />

    <TextView
        android:id="@+id/text_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_horizontal|center_vertical"
        android:lineHeight="14.4sp"
        android:lineSpacingExtra="3sp"
        android:text="@string/text_or"
        android:textColor="@color/gray"
        android:textFontWeight="500"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login_email"
        tools:ignore="TextContrastCheck"
        tools:targetApi="p" />

    <View
        android:id="@+id/line_gray_2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/background_line_gray"
        app:layout_constraintBottom_toBottomOf="@id/text_or"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_or"
        app:layout_constraintTop_toTopOf="@id/text_or" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_login_apple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_sign_in_all"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@id/btn_login_email"
        app:layout_constraintStart_toStartOf="@id/btn_login_email"
        app:layout_constraintTop_toBottomOf="@id/text_or"
        tools:ignore="TouchTargetSizeCheck">

        <ImageView
            android:id="@+id/icon_google"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_google"
            android:contentDescription="@string/description_icon_google"
            app:layout_constraintBottom_toBottomOf="@id/btn_login_apple"
            app:layout_constraintStart_toStartOf="@id/btn_login_apple"
            app:layout_constraintTop_toTopOf="@id/btn_login_apple"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/text_sign_in_apple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_horizontal|center_vertical"
            android:lineHeight="18sp"
            android:lineSpacingExtra="4sp"
            android:text="@string/text_sign_in_google"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@id/icon_google"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_google"
            app:layout_constraintTop_toTopOf="@id/icon_google"
            tools:ignore="TextContrastCheck"
            tools:targetApi="p" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_login_facebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_sign_in_all"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@id/btn_login_apple"
        app:layout_constraintStart_toStartOf="@id/btn_login_apple"
        app:layout_constraintTop_toBottomOf="@id/btn_login_apple"
        tools:ignore="TouchTargetSizeCheck">

        <ImageView
            android:id="@+id/icon_fb"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_fb"
            android:contentDescription="@string/description_icon_facebook"
            app:layout_constraintBottom_toBottomOf="@id/btn_login_facebook"
            app:layout_constraintStart_toStartOf="@id/btn_login_facebook"
            app:layout_constraintTop_toTopOf="@id/btn_login_facebook"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/text_sign_in_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_horizontal|center_vertical"
            android:lineHeight="18sp"
            android:lineSpacingExtra="4sp"
            android:text="@string/text_sign_in_facebook"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@id/icon_fb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_fb"
            app:layout_constraintTop_toTopOf="@id/icon_fb"
            tools:ignore="TextContrastCheck"
            tools:targetApi="p" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_login_vk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_sign_in_all"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@id/btn_login_facebook"
        app:layout_constraintStart_toStartOf="@id/btn_login_facebook"
        app:layout_constraintTop_toBottomOf="@id/btn_login_facebook"
        tools:ignore="TouchTargetSizeCheck">

        <ImageView
            android:id="@+id/icon_vk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_vk"
            android:contentDescription="@string/description_icon_vkontakte"
            app:layout_constraintBottom_toBottomOf="@id/btn_login_vk"
            app:layout_constraintStart_toStartOf="@id/btn_login_vk"
            app:layout_constraintTop_toTopOf="@id/btn_login_vk"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/text_sign_in_vk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_horizontal|center_vertical"
            android:lineHeight="18sp"
            android:lineSpacingExtra="4sp"
            android:text="@string/text_sign_in_vkontakte"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@id/icon_vk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_vk"
            app:layout_constraintTop_toTopOf="@id/icon_vk"
            tools:ignore="TextContrastCheck"
            tools:targetApi="p" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/text_privacy_policy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="73dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="14sp"
        android:lineSpacingExtra="3sp"
        android:text="@string/text_privacy_policy"
        android:textAppearance="@style/text_appearance"
        android:textColor="@color/gray"
        android:textFontWeight="400"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck"
        tools:targetApi="p" />


</androidx.constraintlayout.widget.ConstraintLayout>