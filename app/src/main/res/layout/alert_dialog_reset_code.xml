<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/logo_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_send_email_alert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/text_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:lineSpacingExtra="2sp"
        android:textSize="16sp"
        android:fontFamily="@font/s_f_pro"
        android:textFontWeight="400"
        android:textStyle="normal"
        android:lineHeight="21sp"
       android:textColor="@color/black"
        android:text="@string/we_send_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_send"
        tools:targetApi="p" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_alert"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="@string/to_main"
        android:textColor="@color/color_red"
        android:fontFamily="@font/s_f_pro"
        android:textAllCaps="false"
        android:textFontWeight="600"
        android:textStyle="normal"
        android:textSize="16sp"
        android:lineHeight="20.8sp"
        app:layout_constraintTop_toBottomOf="@id/text_alert"
        android:background="@color/white"
        android:layout_marginTop="25dp"
        tools:targetApi="p" />




</androidx.constraintlayout.widget.ConstraintLayout>