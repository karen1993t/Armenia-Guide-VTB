<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_alert_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textFontWeight="600"
        android:lineHeight="22sp"
        android:textSize="17sp"
        android:lineSpacingExtra="2sp"
        android:fontFamily="@font/s_f_pro"
        android:text="@string/enter_personal_area_blocked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/text_alert_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:lineHeight="18sp"
        android:textStyle="normal"
        android:lineSpacingExtra="5dp"
        android:fontFamily="@font/s_f_pro"
        android:textSize="13sp"
        android:textFontWeight="400"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:text="@string/reset_pin_and_repeat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_alert_1"
        tools:targetApi="p" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_alert_2"
        android:background="@color/black"
        android:alpha="0.15"
        android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>