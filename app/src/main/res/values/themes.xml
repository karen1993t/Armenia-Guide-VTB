<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArmeniaGuideVtb" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">
            @color/white
        </item>

        <!-- icon color status bar -->
        <item name="android:windowLightStatusBar">true</item>
        <!--        <item name="android:colorControlActivated">@color/color_red</item>-->
        <item name="android:colorControlActivated">@color/color_red</item>

    </style>

    <style name="text_appearance" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/gotham_pro</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="box_input_style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="backgroundTint">@color/white</item>
        <item name="boxStrokeColor">@color/text_input_outline_color_state</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="colorControlActivated">@color/color_red</item>

    </style>


    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_red</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>


    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">14.4sp</item>
        <item name="android:gravity">top</item>
        <item name="android:translationY">-1.46sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/gotham_pro</item>
    </style>


    <style name="CustomCheckBox" parent="Theme.AppCompat.Light">

    </style>

    <style name="box_drop_down_style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">

        <item name="backgroundTint">@color/white</item>
        <item name="mock_labelBackgroundColor">@color/black</item>
        <item name="selectableItemBackground">@color/white</item>
        <item name="selectableItemBackgroundBorderless">@color/white</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="fontFamily">@font/gotham_pro</item>

    </style>

    <style name="box_drop_down_search_style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/white</item>
        <item name="fontFamily">@font/gotham_pro</item>
    </style>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/gray</item>
        <item name="android:progressTint">#8E2126</item>
        <item name="trackCornerRadius">20dp</item>
        <item name="android:secondaryProgressTint">#8E2126</item>
        <item name="android:minWidth">200dp</item>
        <item name="cornerRadius">20dp</item>

    </style>

    // Alert Dialog Personal Area

    <style name="CutShapeTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceMediumComponent">@style/CutShapeAppearance</item>
    </style>

    <style name="CutShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    // Alert Dialog Reset password

    <style name="ResetTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceMediumComponent">@style/CutShapeAppearance_1</item>
    </style>

    <style name="CutShapeAppearance_1" parent="ShapeAppearance.MaterialComponents.MediumComponent" tools:ignore="DuplicateDefinition">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    // style bottom Sheet

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    //Date Picker style

    <style name="my_dialog_theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_red</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="selectableItemBackgroundBorderless">@color/color_red</item>
        <item name="android:textColorSecondary">@color/color_grey_pin_view</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>

    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/color_red</item>
    </style>

    <style name="SelectedTextAppearanceCountryName" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/gotham_pro</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultTextAppearanceCountryName" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/gotham_pro</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SelectedTextAppearancePhoneCode" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/gotham_pro</item>
        <item name="android:textColor">@color/color_red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultTextAppearancePhoneCode" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/gotham_pro</item>
        <item name="android:textColor">@color/color_red</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SearchInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="PersonalAreaStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/blue_personal_area</item>

    </style>


</resources>