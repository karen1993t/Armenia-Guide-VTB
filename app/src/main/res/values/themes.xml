<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArmeniaGuideVtb" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">
            @color/black

        </item>
        <item name="android:colorControlActivated">@color/color_red</item>

    </style>

    <style name="text_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gotham_pro</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">20dp</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="some_id">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gotham_pro</item>
        <item name="android:textColor">@color/color_red</item>
        <item name="android:translationY">-1.7sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="lineHeight">16.8dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="box_input_style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="hintTextColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="mock_labelBackgroundColor">@color/black</item>
        <item name="selectableItemBackground">@color/black</item>
        <item name="boxStrokeColor">@color/gray</item>
    </style>

    <style name="box_input_style_1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="mock_labelBackgroundColor">@color/gray</item>
        <item name="selectableItemBackground">@color/gray</item>
        <item name="boxStrokeColor">@color/gray</item>
    </style>


</resources>