<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArmeniaGuideVtb" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">
            @color/black

        </item>
        <!--        <item name="android:colorControlActivated">@color/color_red</item>-->
        <item name="android:colorControlActivated">@color/color_red</item>
    </style>

    <style name="text_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gotham_pro</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">20dp</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="some_id">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gotham_pro</item>
        <item name="android:textColor">@color/color_red</item>
        <item name="android:translationY">-1.7sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="lineHeight">16.8dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="box_input_style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="backgroundTint">@color/white</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="android:colorControlActivated">@color/color_red</item>

    </style>

    <style name="box_input_style_1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="backgroundTint">@color/white</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="boxStrokeColor">@color/gray</item>
    </style>


    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_red</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>


    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">14.4sp</item>
        <item name="android:gravity">top</item>
        <item name="android:translationY">-1.46sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/gotham_pro</item>
    </style>

    <style name="CustomCheckBox" parent="Theme.AppCompat.Light">

    </style>

    <style name="box_drop_down_style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">

        <item name="backgroundTint">@color/white</item>
        <item name="mock_labelBackgroundColor">@color/black</item>
        <item name="selectableItemBackground">@color/white</item>
        <item name="selectableItemBackgroundBorderless">@color/white</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="fontFamily">@font/gotham_pro</item>

    </style>

    <style name="box_drop_down_search_style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/white</item>
        <item name="fontFamily">@font/gotham_pro</item>
    </style>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">#8E2126</item>
        <item name="android:progressTint">#8E2126</item>
        <item name="trackCornerRadius">20dp</item>
        <item name="android:secondaryProgressTint">#8E2126</item>
        <item name="android:minWidth">200dp</item>
        <item name="cornerRadius">20dp</item>

    </style>

    // Alert Dialog Personal Area

    <style name="CutShapeTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceMediumComponent">@style/CutShapeAppearance</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="CutShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center </item>
        <item name="android:fontFamily">@font/gotham_pro </item>
    </style>

    // Alert Dialog Reset password

    <style name="ResetTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceMediumComponent">@style/CutShapeAppearance_1</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral_1</item>
    </style>


    <style name="CutShapeAppearance_1" parent="ShapeAppearance.MaterialComponents.MediumComponent" tools:ignore="DuplicateDefinition">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Alert.Button.Neutral_1" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>

        <item name="android:textStyle">normal</item>
        <item name="android:lineHeight" tools:targetApi="p">20.8sp</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center </item>
        <item name="android:fontFamily">@font/s_f_pro </item>

    </style>

</resources>