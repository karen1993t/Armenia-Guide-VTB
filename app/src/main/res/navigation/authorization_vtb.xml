<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authorization_vtb"
    app:startDestination="@id/authClientFragment">

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.armenia_guide.on_boarding.OnBoardingFragment"
        android:label="fragment_on_boarding"
        tools:layout="@layout/fragment_on_boarding" >
        <action
            android:id="@+id/action_onBoardingFragment_to_authClientFragment"
            app:destination="@id/authClientFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/authClientFragment"
        android:name="com.armenia_guide.auth_client.AuthClientFragment"
        android:label="AuthClientFragment"
        tools:layout="@layout/fragment_auth_client"/>
    <fragment
        android:id="@+id/authorizationEnterPinFragment"
        android:name="com.armenia_guide.authorization.AuthorizationEnterPinFragment"
        android:label="fragment_authorization_enter_pin"
        tools:layout="@layout/fragment_authorization_enter_pin" >
        <action
            android:id="@+id/action_authorizationEnterPinFragment_to_authorizationRepeatPinFragment"
            app:destination="@id/authorizationRepeatPinFragment" />
    </fragment>
    <fragment
        android:id="@+id/authorizationRepeatPinFragment"
        android:name="com.armenia_guide.authorization.AuthorizationRepeatPinFragment"
        android:label="AuthorizationRepeatPinFragment" />
    <fragment
        android:id="@+id/authorizationEmailFragment"
        android:name="com.armenia_guide.authorization.AuthorizationEmailFragment"
        android:label="fragment_authorization_email"
        tools:layout="@layout/fragment_authorization_email" >
        <action
            android:id="@+id/action_authorizationEmailFragment_to_authorizationEnterPinFragment"
            app:destination="@id/authorizationEnterPinFragment" />
    </fragment>
</navigation>