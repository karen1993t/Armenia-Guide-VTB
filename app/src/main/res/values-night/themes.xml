<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArmeniaGuideVtb" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">
            @color/black
        </item>
        <!-- Customize your theme here. -->
        <item name="android:colorControlActivated">@color/color_red</item>
    </style>

    <style name="text_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gotham_pro</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">20dp</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="some_id">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gotham_pro</item>
        <item name="android:textColor">@color/color_red</item>
        <item name="android:translationY">-1.7dp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>